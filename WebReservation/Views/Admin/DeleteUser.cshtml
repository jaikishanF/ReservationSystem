@model IdentityUser

@{
    ViewData["Title"] = "Delete user";
}

<h1>Delete user</h1>
<hr />

<h3>Do you want to delete this user?</h3>
<div>
    <h4>Gebruiker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>

    @if (ViewBag.message != null)
    {
        <div class="alert alert-success">
            <strong>Succeeded!</strong> The user has been deleted!
        </div>
        <a asp-action="Users">Return to Users</a>
    }
    else if (ViewBag.error != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> The user could not be found!
        </div>
        <a asp-action="Users">Return to Users</a>
    }

    @if (ViewBag.message == null && ViewBag.error == null)
    {
        <form asp-action="DeleteUser">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Users">Return to Users</a>
        </form>
    }
</div>
