@model WebReservation.Models.Choice

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<hr />

<h3>Do you want to delete this reservation?</h3>
<div>
    <h4>Reservering</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateChoice):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateChoice)
        </dd>
    </dl>

    @if (ViewBag.message != null)
    {
        <div class="alert alert-success">
            <strong>Gelukt!</strong> De reservering is met succes verwijderd!
        </div>
        <a asp-action="Reservations">Terug naar Reserveringen</a>
    }
    else if (ViewBag.error != null)
    {
        <div class="alert alert-danger">
            <strong>Fout!</strong> De reservering kon niet gevonden worden!
        </div>
        <a asp-action="Reservations">Terug naar Reserveringen</a>
    }

    @if (ViewBag.message == null && ViewBag.error == null)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Reservations">Terug naar Reserveringen</a>
        </form>
    }
</div>
