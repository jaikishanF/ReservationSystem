@model Choice
@{
    ViewData["Title"] = "Reservations";
}


<br />
<h1>Reservations list</h1>
<hr />

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Reservations</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="CreateReservation" asp-controller="Choice" class="btn btn-info form-control text-white">
            Start reservation
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.DateChoice)</th>
                    <th></th>
                </tr>
            </thead>
            @{
                var choices = ViewBag.choices;
            }
            <tbody>
                @foreach (Choice c in choices)
                {
                    <tr>
                        <td>@c.Name</td>
                        <td>@c.Location</td>
                        <td>@c.DateChoice.ToShortDateString()</td>
                        <td>
                            <a href="/Choice/DeleteReservation/@c.Id" class="btn btn-danger form-control text-white">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>